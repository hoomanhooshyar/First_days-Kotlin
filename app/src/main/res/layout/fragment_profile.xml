<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.ProfileFragment">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/cimg_profileFragment_profileImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/margin_base_views_normal"
        tools:src="@drawable/man"/>
    <LinearLayout
        android:id="@+id/linear_profileFragment_changePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cimg_profileFragment_profileImg"
        app:layout_constraintEnd_toEndOf="@id/cimg_profileFragment_profileImg"
        app:layout_constraintStart_toStartOf="@id/cimg_profileFragment_profileImg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_picture"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_photo"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>